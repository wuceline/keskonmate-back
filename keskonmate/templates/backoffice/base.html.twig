            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            {# <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #F1DED4;"> #}
                <div class="container-fluid">                
                    <a class="navbar-brand" href="{{ url('backoffice_homepage') }}">Keskon'Admin ?</a>                
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav justify-content-end navbar-nav me-auto mb-2 mb-lg-0">
                            {% if 'login' != app.request.get('_route') %}
                                <li class="nav-item">
                                    <a 
                                    {% if app.request.get('_route') starts with 'backoffice_homepage' %}
                                        class="nav-link active" aria-current="page" href="{{ url('backoffice_homepage') }}"
                                    {% else %}
                                        class="nav-link"  href="{{ url('backoffice_homepage') }}"
                                    {% endif %}
                                        >Accueil
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a 
                                    {% if app.request.get('_route') starts with 'backoffice_series_browse' %}
                                        class="nav-link active" href="{{ url('backoffice_series_browse') }}"
                                    {% else %}
                                        class="nav-link"  href="{{ url('backoffice_series_browse') }}"
                                    {% endif %}
                                        >Series
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a 
                                    {% if app.request.get('_route') starts with 'backoffice_actors_browse' %}
                                        class="nav-link active" href="{{ url('backoffice_actors_browse') }}"
                                    {% else %}
                                        class="nav-link"  href="{{ url('backoffice_actors_browse') }}"
                                    {% endif %}
                                        >Actors
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a 
                                    {% if app.request.get('_route') starts with 'backoffice_genres_browse' %}
                                        class="nav-link active" href="{{ url('backoffice_genres_browse') }}"
                                    {% else %}
                                        class="nav-link"  href="{{ url('backoffice_genres_browse') }}"
                                    {% endif %}
                                        >Genres
                                    </a>
                                </li>

                            {% if (is_granted('ROLE_ADMIN')) %}   

                                <li class="nav-item">                                        
                                    <a 
                                    {% if app.request.get('_route') starts with 'backoffice_users_browse' %}
                                        class="nav-link active" href="{{ url('backoffice_users_browse') }}"
                                    {% else %}
                                        class="nav-link"  href="{{ url('backoffice_users_browse') }}"
                                    {% endif %}
                                        >Utilisateurs
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a 
                                    {% if app.request.get('_route') starts with 'backoffice_userlists_browse' %}
                                        class="nav-link active" href="{{ url('backoffice_userlists_browse') }}"
                                    {% else %}
                                        class="nav-link"  href="{{ url('backoffice_userlists_browse') }}"
                                    {% endif %}
                                        >Listes
                                    </a>

                            {% endif %}
                                {% if (is_granted('ROLE_USER')) %}                                
                                    <li class="nav-item">                                    
                                        <a class="nav-link" href="{{ url('app_logout') }}">DÃ©connexion</a>
                                {% else %}
                                        <a class="nav-link" href="{{ url('login') }}">Connexion</a>
                                {% endif %}
                                    </li>
                                    
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    <main class="mt-4">
        {% block searchBar %}{% endblock %}
        {% block body %}{% endblock %}
    </main>
    </body>
</html>





